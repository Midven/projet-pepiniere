{% extends "base.html.twig" %}

{% block title %}Mes commandes
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="mb-3 mt-3">Mes commandes</h1>

		{# {{dump(commandes)}} #}

		<table class="table table-hover">

			<tr>
				<thead>
					<th></th>
					<th>Article</th>
					<th>Quantité commandée</th>
					<th>Prix</th>
					<th>Date</th>
				</thead>
			</tr>


			{% for commande in commandes %}
				<tr>
					<td>
						<img src="/images/photosarbres/{{ commande.article.slug }}-1.jpg" alt="Photo de {{commande.article.nom}}" class="avatar avatar-moyen">
					</td>
					<td>
						<strong><a href="{{ path('article_show', {'id': commande.article.id}) }}">{{commande.article.nom}}</a></strong>
					</td>
					<td>
						{{commande.quantite}}
					</td>
					<td>
						<strong>{{commande.article.prix * commande.quantite}}&euro;</strong>
					</td>
					<td>
						<strong>{{commande.date|date("d/m/Y à H:i:s", "Europe/Paris") }}</strong>
					</td>
				</tr>
			{% endfor %}
		</table>

	</div>

{% endblock %}
