{% extends "base.html.twig" %}

{% block title %}Rédaction d'un commentaire pour l'article
	{{article.nom}}
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="mt-3 mb-3">Ecrivez un commentaire pour l'article :
			<strong>{{article.nom}}</strong>
		</h1>

		{# {{dump(app.user)}}
		{{dump(utilisateur)}} #}
		{# {{dump(article.commentaires)}} #}

		{{ form_start(form) }}

		{{ form_row(form.note) }}
		{{ form_row(form.contenu) }}

		<button class="btn btn-success mt-3 mb-3">Envoyez votre commentaire</button>
		{{ form_end(form) }}
		<a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-success">
			<i class="fas fa-arrow-left"></i>
			Revenir à l'article</a>


	</div>

{% endblock %}
